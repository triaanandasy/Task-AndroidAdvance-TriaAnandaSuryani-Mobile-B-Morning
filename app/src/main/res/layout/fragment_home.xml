<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container"/>

    <TextView
        android:id="@+id/tugass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Tugas Android Advance"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/lmagang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tugass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tugas1"
                android:layout_width="308dp"
                android:layout_height="131dp"
                android:src="@drawable/tugas1" />

            <ImageView
                android:id="@+id/tugas2"
                android:layout_width="308dp"
                android:layout_height="131dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/tugas2" />

            <ImageView
                android:id="@+id/tugas3"
                android:layout_width="308dp"
                android:layout_height="131dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/tugas3"/>
            <ImageView
                android:id="@+id/tugas4"
                android:layout_width="308dp"
                android:layout_height="131dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/tugas4"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

